<form action="/all-pets/<%= @pet.id %>" method="post">

    <label for="name"> Name of pet: </label>
    <input class = "pet_form" id = "name" type="text" name="name" value = "<%= @pet.name%>">
    <br>
    <label for="type"> Type of animal: </label>
    <input class = "pet_form" id = "type" type="text" name="type" value = "<%= @pet.type%>">
    <br>
    <label for="breed"> Breed: </label>
    <input class = "pet_form" id = "breed" type="text" name="breed" value = "<%= @pet.breed%>">
    <br>
    <label for="age"> Age: </label>
    <input class = "pet_form" id = "age" type="number" name="age" value = "<%= @pet.age%>">
    <br>
    <label for="size"> Size: </label>
    <select class = "pet_form" id = "size" name="size" value = "<%= @pet.size%>">
      <option value="small">Small</option>
      <option value="medium">Medium</option>
      <option value="big">Big</option>
    </select>
    <br>
    <label for="sex"> Sex: </label>
    <select class = "pet_form" id = "sex" name="sex" value = "<%= @pet.sex%>">
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
    <br>
    <label for="admission-date"> Admission date: (enter as YYYYMMDD) </label>
    <input class = "pet_form" id = "admission-date" type="date" name="admission_date" value = "<%= @pet.admission_date%>">
    <br>
    <label for="adoptable"> Adoptable: </label>
    <select class = "pet_form" id = "adoptable" name="adoptable" value = "<%= @pet.adoptable%>">
      <option value="t">Yes</option>
      <option value="f">No</option>
    </select>
    <br>
    <label for="cost"> Cost: </label>
    <input class = "pet_form" id = "cost" type="number" name="cost" value = "<%= @pet.cost%>">
    <br>

    <div class = "button_container">
      <input class = "buttons" type="submit" value="Update pet">
    </div>
</form>
