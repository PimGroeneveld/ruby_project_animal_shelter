<h1 id="top">All Pets</h1>

<div class="button_container">
<form action="/all-pets/new-pet" method="get">
  <input class="buttons" type="submit" value="Register new pet!">
</form>

<form action="/all-pets/delete-all" method="post">
  <input class="buttons" type="submit" value="Delete All Pets">
</form>
</div>

<% @pets.each do |pet| %>
<figure>
 <img class="pet_pics" src="/<%= pet.picture %>" alt= "Image of <%= pet.name %>" style="height: 200px;">
<p> Name: <%= pet.name %></p>
<p> Type animal: <%= pet.type %></p>
<p> Breed: <%= pet.breed %></p>
<p> Age: <%= pet.age %></p>
<p> Size: <%= pet.size %></p>
<p> Sex: <%= pet.sex %></p>
<p> Cost: Â£<%= pet.cost %></p>
<p><%= pet.name_admission%></p>
<p> Ready for adoption: <%= pet.ready_adoption()%></p>
<p> <a class = "pet_detail_link" href="/all-pets/<%= pet.id %>">Show pet details</a> </p>
<hr/>
</figure>
<% end %>

<div class="footer">
  <a href="#top">Go to top</a>
</div>
